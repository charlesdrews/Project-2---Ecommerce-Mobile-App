<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/character_list_item_elevation"
    app:cardCornerRadius="@dimen/character_list_item_corner_radius"
    android:layout_marginBottom="@dimen/characer_list_item_bottom_margin"
    android:layout_width="match_parent"
    android:layout_height="@dimen/character_list_item_height">

    <ImageView
        android:id="@+id/character_list_item_image"
        android:scaleType="centerCrop"
        android:background="@color/colorPrimaryMedium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ProgressBar
        android:id="@+id/character_list_item_progress_bar"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/character_list_item_name"
        android:layout_gravity="top"
        android:background="@color/translucentBlack"
        android:textColor="@color/character_list_item_name"
        android:textStyle="bold"
        android:textSize="@dimen/character_list_item_name_size"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</android.support.v7.widget.CardView>